{
  "compilerOptions": {
    "experimentalDecorators": true,
    "target": "esnext",
    "module": "commonjs",
    "noImplicitAny": true,
    "strict": true,
    "sourceMap": true,
    "outDir": "./build",
    "baseUrl": ".",
    "paths": {
      "*": ["node_modules/*"]
    },
    "allowSyntheticDefaultImports": true,
    "typeRoots": [
      "node_modules/musickit-typescript",
      "node_modules/@types"
    ]
  },
  "include": [
    "src/main/*",
    "src/main/plugins/*",
    "src/main/plugins/Extras/*"
  ]
}
